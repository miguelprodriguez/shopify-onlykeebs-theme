{% case media.media_type %}
  {% when 'image' %}
  <img
    src="{{media | img_url: 'large'}}"
    alt="{{media.preview_image.alt}}"
    class="object-cover h-full w-full rounded-xl">
  {% when 'model' %}
  {{ media | model_viewer_tag: class: "object-cover h-full w-full rounded-xl" }}
  {% when 'video' %}
  {{ media | video_tag: controls: true, class: "object-cover h-full w-full rounded-xl" }}
  {% when 'external_video' %}
  {{ media | external_video_tag: controls: true, class: "object-cover h-full w-full rounded-xl" }}{% else %}
{% endcase %}