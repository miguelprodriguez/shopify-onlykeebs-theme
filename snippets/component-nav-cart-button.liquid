<a href="{{ routes.cart_url }}" class="relative bg-zinc-800 hover:bg-green-700 rounded-full p-1">
  {% render 'icon-cart' %}
  {% if cart.item_count > 0 %}
    <div class="absolute right-0 text-sm h-4 w-4 rounded-full bg-red-700 flex items-center justify-center">{{ cart.item_count }}</div>
  {% endif %}
</a>